<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:divider="@drawable/spacer_medium"
    android:showDividers="middle"
    android:padding="8dp"
    android:layout_gravity="center">

    <TextView
        android:id="@+id/average_grade"
        android:layout_width="match_parent"
        android:layout_height="128dp"
        android:fontFamily="@font/ubuntu_mono_bold"
        android:gravity="center"
        android:text="0.00"
        android:textAppearance="@android:style/TextAppearance.Material.Display1"
        android:textSize="96sp" />

    <TextView
        android:id="@+id/grades_list"
        android:layout_marginEnd="50dp"
        android:layout_marginStart="50dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAlignment="center" />

    <LinearLayout
        android:id="@+id/buttons_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:divider="@drawable/spacer_medium"
        android:showDividers="beginning|middle|end"
        android:orientation="horizontal">

        <Button
            android:id="@+id/add_grade_5"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:backgroundTint="@color/grade_A"
            android:text="5"
            android:textSize="20sp" />

        <Button
            android:id="@+id/add_grade_4"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:backgroundTint="@color/grade_B"
            android:text="4"
            android:textSize="20sp" />


        <Button
            android:id="@+id/add_grade_3"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:backgroundTint="@color/grade_C"
            android:text="3"
            android:textSize="20sp" />

        <Button
            android:id="@+id/add_grade_2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:backgroundTint="@color/grade_D"
            android:text="2"
            android:textSize="20sp" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/buttons_container_2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:divider="@drawable/spacer_medium"
        android:orientation="horizontal"
        android:showDividers="beginning|middle|end">

        <Button
            android:id="@+id/clear_grades"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Очистить всё" />

        <Button
            android:id="@+id/undo"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Отмена" />


    </LinearLayout>

</LinearLayout>